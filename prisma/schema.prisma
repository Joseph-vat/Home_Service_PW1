// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        String            @id @default(uuid())
  nome      String
  email     String            @unique
  senha     String
  telefone  String
  foto      String? //saber depois como usar e qual o tipo ser√°
  prestador PrestadorServico?
  cliente   Cliente?
}

model PrestadorServico {
  cnpj                   String    @unique
  horarioDisponibilidade String
  usuarioIdPrestador     String    @unique
  usuario                Usuario   @relation(fields: [usuarioIdPrestador], references: [id])
  latitude      Float
  longitude     Float
  anuncios               Anuncio[]
}

model Cliente {
  cpf              String  @unique
  endereco         String
  usuarioIdCliente String  @unique
  usuario          Usuario @relation(fields: [usuarioIdCliente], references: [id])
}

model Anuncio {
  id            String           @id @default(uuid())
  titulo        String
  descricao     String
  preco         String
  dtCriacao     DateTime         @default(now())
  dtAtualizacao DateTime         @updatedAt
  prestadorId   String
  prestador     PrestadorServico @relation(fields: [prestadorId], references: [usuarioIdPrestador])
  categoriaId   String
  categoria     Categoria        @relation(fields: [categoriaId], references: [id])
}

model Categoria {
  id        String   @id @default(uuid())
  servico   String
  icone     String
  anuncios  Anuncio[]
}
